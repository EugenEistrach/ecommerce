datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String   @id @default(cuid())
  name     String?
  email    String?  @unique
  password String?
  products Product? @relation("Product_createdBy")
}

model Product {
  id          String       @id @default(cuid())
  name        String?
  description String?
  images      CloudImage[] @relation("CloudImage_products_Product_images")
  status      String?
  price       Int?
  createdBy   User?        @relation("Product_createdBy", fields: [createdById], references: [id])
  createdById String?      @unique @map("createdBy")
}

model CloudImage {
  id       String    @id @default(cuid())
  image    Json?
  name     String?
  products Product[] @relation("CloudImage_products_Product_images")
}